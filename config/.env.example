# 量化交易系统环境变量配置文件
# 复制此文件为 .env 并填入真实的配置值

# ===== 数据源配置 =====
# Alpha Vantage API 密钥（用于获取股票数据）
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl API 密钥（用于获取经济数据）
QUANDL_API_KEY=your_quandl_api_key_here

# IEX Cloud API 密钥（用于实时市场数据）
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
IEX_CLOUD_BASE_URL=https://cloud.iexapis.com/stable

# ===== 数据库配置 =====
# 数据库连接字符串
DATABASE_URL=sqlite:///data/trading_data.db

# PostgreSQL 数据库配置（可选）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quant_trading
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# ===== 交易配置 =====
# 初始资金
INITIAL_CAPITAL=100000.0

# 最大单笔交易风险比例
MAX_POSITION_SIZE=0.05

# 风险管理参数
MAX_DAILY_LOSS=0.02
MAX_DRAWDOWN=0.15

# ===== 通知配置 =====
# 邮件通知配置
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com

# 微信通知配置（可选）
WECHAT_WEBHOOK_URL=

# Telegram 通知配置（可选）
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ===== 日志配置 =====
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=logs/trading.log

# 是否启用文件日志
ENABLE_FILE_LOGGING=true

# 是否启用控制台日志
ENABLE_CONSOLE_LOGGING=true

# ===== 回测配置 =====
# 回测开始日期
BACKTEST_START_DATE=2020-01-01

# 回测结束日期  
BACKTEST_END_DATE=2023-12-31

# 交易手续费（百分比）
COMMISSION_RATE=0.001

# 滑点（百分比）
SLIPPAGE_RATE=0.0005

# ===== 策略配置 =====
# 默认策略参数
MA_FAST_PERIOD=10
MA_SLOW_PERIOD=20
RSI_PERIOD=14
BOLLINGER_PERIOD=20
BOLLINGER_STD=2.0

# ===== 开发环境配置 =====
# 开发模式
DEBUG_MODE=false

# 是否启用纸质交易模式
PAPER_TRADING=true

# API 请求超时时间（秒）
API_TIMEOUT=30

# 数据缓存时间（分钟）
DATA_CACHE_DURATION=60

# ===== 安全配置 =====
# JWT 密钥（如果使用Web界面）
JWT_SECRET_KEY=your_jwt_secret_key_here

# 加密密钥
ENCRYPTION_KEY=your_encryption_key_here

# ===== 第三方服务配置 =====
# Redis 配置（用于缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 是否启用Redis缓存
ENABLE_REDIS_CACHE=false